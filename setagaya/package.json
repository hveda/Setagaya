{
  "name": "setagaya",
  "version": "1.0.0",
  "description": "Setagaya Load Testing Platform - Modern UI with Alpine.js and RBAC",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build-css": "npx tailwindcss -i ./src/input.css -o ./ui/static/css/output.css --watch",
    "build-css-prod": "npx tailwindcss -i ./src/input.css -o ./ui/static/css/output.css --minify",
    "build-js": "npx webpack --mode production",
    "build-js-dev": "npx webpack --mode development --watch",
    "dev": "concurrently \"npm run build-css\" \"npm run build-js-dev\"",
    "build": "npm run build-css-prod && npm run build-js",
    "lint": "npx eslint ui/static/js/*.js --ignore-pattern ui/static/js/lib/",
    "lint:fix": "npx eslint ui/static/js/*.js --ignore-pattern ui/static/js/lib/ --fix",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "serve": "npx http-server ui/templates -p 8081 -o",
    "clean": "npx rimraf node_modules package-lock.json dist ui/static/css/output.css"
  },
  "keywords": [
    "load-testing",
    "jmeter",
    "kubernetes",
    "alpine.js",
    "rbac",
    "monitoring"
  ],
  "author": "Setagaya Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.52.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.1",
    "mini-css-extract-plugin": "^2.7.6",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "alpinejs": "^3.14.9",
    "axios": "^1.11.0",
    "bootstrap": "^5.3.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "globals": {
      "Alpine": "readonly",
      "axios": "readonly",
      "window": "readonly",
      "document": "readonly",
      "console": "readonly"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
